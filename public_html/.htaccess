Options +FollowSymLinks
RewriteEngine on

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# URL rewrites
RewriteRule ^cuadro/(.+)$ /ampliar.html?$1
RewriteRule ^painting/(.+)$ /painting.html?$1
RewriteRule ^cuadro2/(.+)$ /ampliar2.html?$1
RewriteRule ^cuadros-oleo/(.+)$ /ampliar_ambientes.html?$1

# Redirect .com.ar to .com (with HTTPS)
RewriteCond %{HTTP_HOST} ^teresapiacentino\.com\.ar$ [OR]
RewriteCond %{HTTP_HOST} ^www\.teresapiacentino\.com\.ar$
RewriteRule ^(.*)$ "https://www.teresapiacentino.com/$1" [R=301,L]

